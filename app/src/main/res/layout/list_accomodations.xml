<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:outlineProvider="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/accomodationImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/accomodationLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accomodationImage"
            android:text="location"
            android:textColor="@color/text"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/accomodationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accomodationLocation"
            android:text="text"
            android:textColor="@color/text_light"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/accomodationPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accomodationText"
            android:text="price"
            android:textColor="@color/text"
            android:paddingTop="15dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/bookBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foglald le"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/accomodationText"
            app:backgroundTint="@color/dark_blue"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>