<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:outlineProvider="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bookedAccomodationLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/text"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/bookedAccomodationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookedAccomodationLocation"
            android:textColor="@color/text_light"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/bookedAccomodationPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookedAccomodationDate"
            android:textColor="@color/text"
            android:paddingTop="15dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/removeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Töröld a foglalást"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/bookedAccomodationPrice"
            app:backgroundTint="@color/dark_blue"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>